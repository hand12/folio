.col-md-12.col-sm-12.conForm
  .contact.devise_form
    %h2 新規ユーザー登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        = f.email_field :email, autofocus: true, placeholder: "email"
      .field
        = f.password_field :password, autocomplete: "off", placeholder: "パスワードを決めてください。（6文字以上)"
      .field
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: "確認用にもう一度同じパスワードを入力してください。"
      .actions
        = f.submit "新規登録", class: "submitBnt"
    = render "devise/shared/links"
