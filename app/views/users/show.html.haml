%section.no-padding.container.clearfix
  .col-md-10.col-xs-12.col-lg-10.col-md-offset-1.col-lg-offset-1.user_box
    .col-md-4.col-xs-10.col-lg-4.col-xs-offset-1.col-lg-offset-0.user_avatar_box
      .user_avatar
        = image_tag @user.avatar.thumb
      - if user_signed_in?
        - if current_user.id == @user.id
          .user_edit.user_btn
            = link_to "編集する", edit_user_path(current_user)
    .col-md-8.col-xs-10.col-lg-8.user_info_box
      .user_name
        = @user.name
      .user_college
        = @user.college_name
      .user_product_count
        %h3
          投稿数 : #{@user.products.count}
      .user_profile
        = @user.profile

%h3.user_product
  #{@user.name}さんの投稿作品一覧
%section#works.works.section.no-padding
  .row.no-gutter
    = render @user.products

.panel.clearfix
  = render partial: 'products/post'
